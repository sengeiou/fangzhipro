<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="390px"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="58px"
                android:layout_height="66px"
                android:src="@mipmap/icon_phone" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="802px"
                android:layout_height="66px"
                android:background="@null"
                android:digits="1234567890"
                android:hint="手机号"
                android:paddingLeft="40px"
                android:textColor="@color/login_text"
                android:textColorHint="@color/login_hint"
                android:textScaleX="0.96"
                android:textSize="54px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="910px"
            android:layout_height="1px"
            android:layout_marginTop="20px"
            android:background="@color/login_hint" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="58px"
                android:layout_height="66px"
                android:src="@mipmap/icon_password" />

            <EditText
                android:id="@+id/password"
                android:layout_width="802px"
                android:layout_height="66px"
                android:background="@null"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="密码"
                android:inputType="textPassword"
                android:paddingLeft="40px"
                android:textColor="@color/login_text"
                android:textColorHint="@color/login_hint"
                android:textScaleX="0.96"
                android:textSize="54px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="910px"
            android:layout_height="1px"
            android:layout_marginTop="20px"
            android:background="@color/login_hint" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/login"
        android:layout_width="910px"
        android:layout_height="130px"
        android:layout_marginTop="136px"
        android:background="@drawable/login_butt_select"
        android:clickable="true"
        android:gravity="center"
        android:text="登录"
        android:textColor="@drawable/login_butttext_select"
        android:textSize="54px" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="910px"
        android:layout_height="wrap_content"
        android:layout_marginTop="62px"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/forget"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="86px"
            android:padding="20px"
            android:text="忘记密码"
            android:textColor="@color/login_hint"
            android:textSize="38px" />

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="86px"
            android:padding="20px"
            android:text="立即注册"
            android:textColor="@color/login_hint"
            android:textSize="38px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/weixin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200px"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/weixint"
            android:layout_width="117px"
            android:layout_height="96px"
            android:background="@drawable/login_weixin_select"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26px"
            android:text="微信登录"
            android:textColor="@color/login_hint"
            android:textSize="38px" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>