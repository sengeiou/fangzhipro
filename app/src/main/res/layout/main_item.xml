<?xml version="1.0" encoding="utf-8"?>
<com.fangzhi.dafangzhi.views.AutoCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="730px"
    android:layout_height="510px"
    android:layout_marginRight="20px"
    android:layout_marginTop="20px"
    android:layout_marginBottom="20px"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.3"
            android:scaleType="fitXY" />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:textSize="40px"
                android:paddingLeft="20px"
                android:text="翡翠城" />
            <TextView
                android:id="@+id/tv_count"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:paddingRight="20px"
                android:gravity="center_vertical|right"
                android:textSize="40px"
                android:text="户型:13" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.fangzhi.dafangzhi.views.AutoCardView>