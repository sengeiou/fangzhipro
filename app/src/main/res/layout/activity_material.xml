<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="178px"
            android:background="@color/white"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_back"
                style="@style/Widget.AppCompat.ActionButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@mipmap/icon_back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="材料详情"
                android:textColor="@color/login_text"
                android:textSize="62px" />


            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/gohome"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30px"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="78px"
                    android:src="@mipmap/home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5px"
                    android:gravity="center"
                    android:text="回到首页"
                    android:textColor="@color/text_color"
                    android:textSize="34px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/goxiaoxi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="30px"
                android:layout_toLeftOf="@id/gohome"
                android:gravity="center"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="28px"
                        android:layout_height="28px"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20px"
                        android:src="@drawable/information" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="78px"
                        android:src="@mipmap/news" />

                </com.zhy.autolayout.AutoRelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5px"
                    android:gravity="center"
                    android:text="我的消息"
                    android:textColor="@color/text_color"
                    android:textSize="34px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="30px"
                android:layout_toLeftOf="@id/goxiaoxi"
                android:gravity="center"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5px"
                        android:background="@drawable/information"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="78px"
                        android:src="@mipmap/buying_car" />

                </com.zhy.autolayout.AutoRelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5px"
                    android:gravity="center"
                    android:text="购物车"
                    android:textColor="@color/text_color"
                    android:textSize="34px" />
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.jude.easyrecyclerview.EasyRecyclerView
        android:id="@+id/recycler_type"
        android:layout_width="match_parent"
        android:layout_height="132px"
        android:background="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="80px"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iamg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/zanwei" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="80px"
            android:layout_marginTop="80px"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="玖玺台，50平米一居，新时尚风格"
                android:textColor="@color/login_text"
                android:textSize="54px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="38px"
                android:layout_marginTop="100px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ying"
                    android:layout_width="0dp"
                    android:layout_height="90px"
                    android:layout_weight="1"
                    android:background="@drawable/text_yesbg"
                    android:gravity="center"
                    android:text="硬装"
                    android:textColor="@color/white"
                    android:textSize="54px" />

                <TextView
                    android:id="@+id/ruan"
                    android:layout_width="0dp"
                    android:layout_height="90px"
                    android:layout_weight="1"
                    android:background="@drawable/text_nobg"
                    android:gravity="center"
                    android:text="软装"
                    android:textColor="@color/login_text"
                    android:textSize="54px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="56px"
                android:layout_marginRight="38px"
                android:layout_marginTop="100px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/typename"
                    android:layout_width="wrap_content"
                    android:layout_height="56px"
                    android:gravity="center"
                    android:text="硬装材料："
                    android:textColor="@color/login_text"
                    android:textSize="38px" />

                <TextView
                    android:id="@+id/money"
                    android:layout_width="wrap_content"
                    android:layout_height="56px"
                    android:gravity="center"
                    android:text="9.8万元"
                    android:textColor="@color/red"
                    android:textSize="45px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.jude.easyrecyclerview.EasyRecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="24px"
                android:background="@color/white" />

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>