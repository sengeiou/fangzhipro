<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="114px"
        android:gravity="center"
        android:text="找回密码"
        android:layout_marginLeft="1100px"
        android:textColor="@color/login_hint"
        android:padding="15px"
        android:textSize="62px" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_marginLeft="114px"
        android:padding="10px"
        android:layout_marginTop="114px"
        android:src="@mipmap/icon_back" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/mm"
        android:layout_marginLeft="800px"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="355px"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="58px"
                android:layout_height="66px"
                android:src="@mipmap/icon_phone" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="802px"
                android:layout_height="66px"
                android:background="@null"
                android:hint="请输入你的手机"
                android:paddingLeft="40px"
                android:textColor="@color/login_text"
                android:textColorHint="@color/login_hint"
                android:textScaleX="0.96"
                android:textSize="54px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="910px"
            android:layout_height="1px"
            android:layout_marginTop="20px"
            android:background="@color/login_hint" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="98px"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="58px"
                        android:layout_height="66px"
                        android:src="@mipmap/icon_key" />

                    <EditText
                        android:id="@+id/verification"
                        android:layout_width="522px"
                        android:layout_height="66px"
                        android:background="@null"
                        android:hint="验证码"
                        android:paddingLeft="40px"
                        android:textColor="@color/login_text"
                        android:textColorHint="@color/login_hint"
                        android:textScaleX="0.96"
                        android:textSize="54px" />

                </com.zhy.autolayout.AutoLinearLayout>

                <TextView
                    android:layout_width="600px"
                    android:layout_height="1px"
                    android:layout_marginTop="20px"
                    android:background="@color/login_hint" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/gainverify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="40px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/verify"
                    android:layout_width="wrap_content"
                    android:layout_height="66px"
                    android:background="@null"
                    android:gravity="center"
                    android:text="验证码"
                    android:textColor="@color/login_hint"
                    android:textSize="45px" />

                <TextView
                    android:layout_width="230px"
                    android:layout_height="1px"
                    android:layout_marginTop="20px"
                    android:background="@color/login_hint" />
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/next"
            android:layout_width="910px"
            android:layout_height="135px"
            android:layout_marginTop="136px"
            android:background="@drawable/login_butt_select"
            android:clickable="true"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@drawable/login_butttext_select"
            android:textSize="54px" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>