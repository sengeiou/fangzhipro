<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/zanwei"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/iv_home"
        android:layout_width="96px"
        android:layout_height="96px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80px"
        android:layout_marginTop="60px"
        android:clickable="true"
        android:src="@drawable/icon_home" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="96px"
        android:layout_height="96px"
        android:layout_marginLeft="80px"
        android:layout_marginTop="60px"
        android:src="@mipmap/return_ipad" />

    <ImageView
        android:id="@+id/iv_calculate"
        android:layout_width="96px"
        android:layout_height="96px"
        android:layout_below="@id/iv_close"
        android:layout_marginLeft="80px"
        android:layout_marginTop="180px"
        android:clickable="true"
        android:src="@drawable/icon_calcu" />

    <ImageView
        android:id="@+id/iv_eye"
        android:layout_width="96px"
        android:layout_height="96px"
        android:layout_below="@id/iv_calculate"
        android:layout_marginLeft="80px"
        android:layout_marginTop="60px"
        android:clickable="true"
        android:src="@drawable/icon_eye" />

    <ImageView
        android:id="@+id/iv_eyx"
        android:layout_width="96px"
        android:layout_height="96px"
        android:layout_below="@id/iv_eye"
        android:layout_marginLeft="80px"
        android:layout_marginTop="60px"
        android:clickable="true"
        android:src="@drawable/icon_eyx" />

    <!--<include layout="@layout/view_room_right_part" />-->

    <RelativeLayout
        android:id="@+id/view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center">

        <com.fangzhi.dafangzhi.views.loading.AVLoadingIndicatorView
            android:id="@+id/avi"
            android:layout_width="100dp"
            android:layout_height="40dp" />
    </RelativeLayout>

    <include
        layout="@layout/activity_room_items"
        android:visibility="gone"></include>

</com.zhy.autolayout.AutoRelativeLayout>